# Environment Configuration
ENVIRONMENT=development

# Application
APP_NAME=MinimalERP
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=change-this-in-production-min-32-chars-long

# Database
DATABASE_URL=postgresql://minimalerp:minimalerp_secure_2024@localhost:5432/minimalerp
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://:minimalerp_redis_2024@localhost:6379/0

# API
API_V1_PREFIX=/api/v1
API_TITLE=MinimalERP API
API_DOCS_URL=/docs
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# OpenAI (Optional - for advanced AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# GİB (Gelir İdaresi Başkanlığı) - e-Fatura Integration
GIB_USERNAME=your-gib-username
GIB_PASSWORD=your-gib-password
GIB_ENV=test  # test or production
GIB_WSDL_URL=https://efaturatest.gib.gov.tr/
GIB_TIMEOUT=30

# e-Arşiv
EARSIV_USERNAME=your-earsiv-username
EARSIV_PASSWORD=your-earsiv-password

# Bank Integrations (Examples)
# Add your bank API credentials
BANK_API_ENABLED=False

# PayTR (Turkish Payment Gateway)
PAYTR_MERCHANT_ID=
PAYTR_MERCHANT_KEY=
PAYTR_MERCHANT_SALT=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@minimalerp.com.tr
SMTP_TLS=True

# SMS (Optional - Turkish SMS providers)
SMS_PROVIDER=netgsm  # or mutlucell, iletimerkezi
SMS_API_KEY=
SMS_USERNAME=
SMS_PASSWORD=

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["pdf", "jpg", "jpeg", "png", "xlsx", "xls", "docx"]
UPLOAD_FOLDER=/app/uploads

# AI Models
AI_MODELS_PATH=/app/ai_models
ENABLE_OCR=True
ENABLE_FORECASTING=True
ENABLE_ANOMALY_DETECTION=True

# Celery
CELERY_BROKER_URL=redis://:minimalerp_redis_2024@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:minimalerp_redis_2024@localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Europe/Istanbul
CELERY_ENABLE_UTC=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/minimalerp.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Security
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
HTTPS_ONLY=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# KVKK (Kişisel Verileri Koruma Kanunu)
DATA_RETENTION_DAYS=3650  # 10 years
ENABLE_DATA_ENCRYPTION=True
ENABLE_AUDIT_LOG=True

# Turkish Localization
TIMEZONE=Europe/Istanbul
LANGUAGE=tr
CURRENCY=TRY
DATE_FORMAT=%d.%m.%Y
TIME_FORMAT=%H:%M:%S

# Feature Flags
FEATURE_AI_CASHFLOW_PREDICTION=True
FEATURE_AI_SALES_FORECAST=True
FEATURE_AI_DEMAND_FORECAST=True
FEATURE_AI_LEAD_SCORING=True
FEATURE_AI_ANOMALY_DETECTION=True
FEATURE_AI_DOCUMENT_OCR=True

# Cache Settings
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes
CACHE_USER_SESSION_TIMEOUT=3600  # 1 hour

# Backup
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Monitoring
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# Development
AUTO_RELOAD=True
SHOW_SQL_QUERIES=False
